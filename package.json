    "lodash": "^4.17.4",
    "node-sass": "^4.5.3",
    "node-sass-magic-importer": "^5.0.0-alpha.14",
    "object-path": "^0.11.4",
    "openport": "^0.0.4",
    "optimize-css-assets-webpack-plugin": "^3.1.1",
    "path-is-inside": "^1.0.2",
    "postcss-loader": "^2.0.5",
    "resolve-url-loader": "^2.0.2",
    "resp-modifier": "^6.0.2",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack-assets-manifest": "^1.0.0",
    "yargs": "^8.0.2",
    "yeoman-generator": "^1.1.1"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "snapshotSerializers": [
      "./__tests__/__helpers__/serialisers"
    ]
  }
