{
  "name": "@gladeye/bento",
  "version": "1.1.0-beta.8",
  "main": "config/dst/index.js",
  "repository": "https://github.com/gladeye/bento",
  "author": "Gladeye Team <point@gladeye.com>",
  "license": "MIT",
  "engines": {
    "node": ">=7"
  },
  "scripts": {
    "test": "jest",
    "test:config:index": "jest __tests__/config/index.test.js --forceExit",
    "test:scaffold:index": "jest __tests__/scaffold/index.test.js",
    "scaffold": "run-s scaffold:*",
    "scaffold:ssa": "cd examples/server-side-app; rimraf -rf ./* && yo ../../scaffold --default=ssa",
    "scaffold:spa": "cd examples/single-page-app; rimraf -rf ./* && yo ../../scaffold --default=spa",
    "prepublishOnly": "yarn build && yarn test",
    "push:beta": "npm publish --tag beta --access public",
    "push": "npm publish --access public",
    "build:babel": "babel ./config/src -d ./config/dst",
    "build": "yarn clean:dst && yarn build:babel",
    "start": "yarn start:babel",
    "start:babel": "yarn clean:dst && yarn build:babel -- --watch",
    "clean:dst": "rimraf  ./config/dst/*"
  },
  "peerDependencies": {
    "webpack": "3.x",
    "webpack-dev-server": "2.x",
    "webpack-merge": "4.1.x"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-jest": "^21.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-preset-stage-2": "^6.24.1",
    "jest": "^21.0.1",
    "npm-run-all": "^4.0.2",
    "pretty-format": "^21.0.2",
    "rimraf": "^2.6.1",
    "shelljs": "^0.7.8",
    "supertest": "^3.0.0",
    "tmp": "^0.0.33",
